<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    style="@style/mwStyle"
    android:layout_margin="@dimen/a10"
    android:background="@drawable/button_box"
    android:layoutAnimation="@android:anim/slide_in_left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_Name"
        style="@style/wpStyle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="@dimen/a10"
        android:shadowColor="@color/white"
        android:shadowRadius="20"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize60" />

    <ImageView
        android:layout_width="@dimen/a100"
        android:layout_height="@dimen/a100"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:padding="@dimen/a10"
        android:src="@drawable/chevron_right" />
</RelativeLayout>